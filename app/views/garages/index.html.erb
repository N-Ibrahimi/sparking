<p id="notice"><%= notice %></p>

<h1>Garages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @garages.each do |garage| %>
      <tr>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :name %></td>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :address %></td>
        <td><%= link_to "Show Spots", garage_garage_spots_path(garage), class: "button btn btn-info btn-xs" %></td>
        <td><%= link_to 'Reserve', garage %></td>
        <td><%= link_to 'Destroy', garage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

