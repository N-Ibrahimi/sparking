<!DOCTYPE html>
<html>
  <head>
    <title>Sparking</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'header', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <% if super_admin? || garage_owner? %>
      <%= javascript_include_tag 'notifications' %>
    <% end %>

    <%= Gon::Base.render_data %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="//maps.google.com/maps/api/js?key=AIzaSyCFX36XG5wcBDRpWp7HwLUClM2whiT3tvs"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>  
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <script src='//underscorejs.org/underscore-min.js' type='text/javascript'></script>
    <% if content_for? :head %>
        <%= yield :head %>
    <% end %>
  </head>

  <!-- Header partial for every page -->
  <%= render 'layouts/header' unless @skip_header %>

  <body>
    <div class="container">

      <% flash.each do |message_type, message| %>
          <%= javascript_tag "Materialize.toast('#{message}', 6000, 'light-blue lighten-1')" %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
