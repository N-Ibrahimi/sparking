<%= javascript_include_tag 'users_reservation', 'data-turbolinks-track': 'reload' %>
<div>
  <table class="bordered">
    <thead>
    <tr>
      <th>Garage</th>
      <th>Spot</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Length</th>
    </tr>
    </thead>

    <tbody class="booking-table">
      <% @bookings.each do |a| %>
        <tr class="clickable booking-row">
          <td><%= a.garage_spot.garage.name %></td>
          <td><%= a.garage_spot.spot.name %></td>
          <td><%= a.start_time %></td>
          <td><%= a.end_time %></td>
          <td><%= a.length %> hour(s)</td>
        </tr>
        <tr class="qr-picture">
          <td><div class="qr"><%= raw get_qr_code(@hashids.encode(a.id)).as_html %></div></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>