<% content_for :head do %>
    <%= javascript_include_tag 'users', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="top-margin">
  <!-- Account -->
  <%= render "users/user_profile/account"%>

  <!-- Edits -->
  <div id="edit" class="card-panel">
    <h5 class="center-align">Edit</h5>

    <h5 class="edit-title">User Information</h5>
    <%=render "users/registrations/profile_edit"%>

    <hr class="top-margin">
    <h5 class="edit-title">Vehicle Information</h5>
    <%=render "users/user_profile/vehicle_edit"%>
  </div>


  <div id="profile-row">

    <!-- Desktop view -->

    <!-- History -->
    <div class="custom-container inactive-main top-right card-panel hide-on-small-only">
      <div>
        <div class="preview top-margin"><h5 class="center-align">Reservations</h5></div>
        <div class="content-main">
          <%= render "users/user_profile/history"%>
        </div>
      </div>
    </div>

    <!-- Vehicle -->
    <div class="custom-container inactive-main bottom-right card-panel hide-on-small-only">
      <div>
        <div class="preview top-margin"><h5 class="center-align">Vehicle Info</h5></div>
        <div class="content-main">
          <%= render "users/user_profile/vehicle"%>
        </div>
      </div>
    </div>


    <!-- Countdown timer -->
    <div class="custom-container active-main card-panel hide-on-small-only">
      <div>
        <div class="preview top-margin"><h5 class="center-align">Upcoming Reservation</h5></div>
        <div class="content-main">
          <%= render "users/user_profile/clock"%>
        </div>
      </div>
    </div>

    <!-- Mobile view -->

    <!-- Vehicle -->
    <div class="col s12 card-panel show-on-small hide-on-med-and-up">
      <h5 class="center-align">Vehicle Info</h5>
      <%= render "users/user_profile/vehicle"%>
    </div>

    <!-- History -->
    <div class="col s12 card-panel show-on-small hide-on-med-and-up">
      <h5 class="center-align">Reservations</h5>
      <%= render "users/user_profile/history"%>
    </div>

  </div>
</div>