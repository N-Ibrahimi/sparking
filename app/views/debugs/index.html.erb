</table>

<h3>Booking</h3>

<table class="responsive-table highlight">
  <thead>
    <tr>
      <th>ID</th>
      <th>Code</th>
      <th>User_ID</th>
      <th>Name</th>
      <th>GS_ID</th>
      <th>G_ID</th>
      <th>S_ID</th>
      <th>Serial</th>
      <th>Amount</th>
      <th>Paid</th>
      <th>Token</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Length</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.id %></td>
        <td><%= @hashids.encode(booking.id) %></td>
        <td><%= booking.user_id %></td>
        <td><%= booking.user.name %></td>
        <td><%= booking.garage_spot_id %></td>
        <td><%= booking.garage_spot.garage_id %></td>
        <td><%= booking.garage_spot.spot_id %></td>
        <td><%= booking.garage_spot.serial %></td>
        <td><%= booking.charge.amount %></td>
        <td><%= booking.charge.paid %></td>
        <td><%= booking.charge.token %></td>
        <td><%= booking.start_time %></td>
        <td><%= booking.end_time %></td>
        <td><%= booking.length %></td>
      </tr>
    <% end %>
  </tbody>
</table>