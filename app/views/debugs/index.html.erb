<h3>Garages</h3>

<table class="responsive-table highlight">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Notify</th>
      <th>Weekday</th>
      <th>Weekend</th>
    </tr>
  </thead>

  <tbody>
    <% @garages.each do |garage| %>
      <tr>
        <td><%= garage.id %></td>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :name %></td>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :address %></td>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :email %></td>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :notify %></td>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :weekday %></td>
        <td><%= click_to_edit garage, path: garage_path(garage), attribute: :weekend %></td>
      </tr>
    <% end %>
  </tbody>
</table>

