<h3>Garage Spots</h3>

<table class="responsive-table highlight">
  <thead>
    <tr>
      <th>ID</th>
      <th>Garage_ID</th>
      <th>Spot_ID</th>
      <th>Spot Name</th>
      <th>Garage Name</th>
      <th>Serial</th>
    </tr>
  </thead>
  <tbody>
    <% @garage_spots.each do |garage_spot| %>
      <tr>
        <td><%= garage_spot.id %></td>
        <td><%= click_to_edit garage_spot, path: garage_spot_path(garage_spot), attribute: :garage_id %></td>
        <td><%= click_to_edit garage_spot, path: garage_spot_path(garage_spot), attribute: :spot_id %></td>
        <td><%= garage_spot.spot.name %></td>
        <td><%= garage_spot.garage.name %></td>
        <td><%= click_to_edit garage_spot, path: garage_spot_path(garage_spot), attribute: :serial %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>License Plates</h3>

