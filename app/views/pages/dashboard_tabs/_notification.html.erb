<% content_for :head do %>
  <%= javascript_include_tag 'notification_partial', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'notification_partial', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="notification-wrapper">
  <!-- Notification elements will be generated by js -->
</div>

<!-- Modal -->
<div id="confirmation-modal" class="modal modal-fixed-footer center-align">
  <div class="modal-content">
    <div class="row">
      <span>Is everything resolved?</span>
    </div>
    <div class="row">
      <a id="yes-btn" class="waves-effect waves-light btn">Yes</a>
      <a id="no-btn" class="waves-effect waves-light btn">No</a>
    </div>
  </div>
</div>

<!-- Pagination -->
<ul class="row center-align pagination">
</ul>