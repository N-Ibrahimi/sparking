<% content_for :head do %>
    <%= javascript_include_tag 'dashboard', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="top-margin">
  <h2 class="center-align">Dashboard</h2>

  <ul id="tabs-swipe-demo" class="tabs">
    <li class="tab"><a href="#bookings">Bookings</a></li>
    <li class="tab"><a href="#notifications">Notifications</a></li>
    <li class="tab"><a href="#profile">Garage Profile</a></li>
  </ul>
  <div class="row">
    <div id="bookings" class="col s12">
      <%= render 'pages/dashboard_tabs/booking_table' %>
    </div>
    <div id="notifications" class="col s12">
      <%= render 'pages/dashboard_tabs/notification' %>
    </div>
    <div id="profile" class="col s12">
      Zone: <%= click_to_edit Garage.where(id: garage_owner?).first, path: garage_path(garage_owner?), attribute: :zone %>
      Weekday: <%= click_to_edit Garage.where(id: garage_owner?).first, path: garage_path(garage_owner?), attribute: :weekday %>
      Weekend: <%= click_to_edit Garage.where(id: garage_owner?).first, path: garage_path(garage_owner?), attribute: :weekend %>
    </div>
  </div>

</div>