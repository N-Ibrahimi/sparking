<p id="notice"><%= notice %></p>

<h1>Licenseplates</h1>

<table>
  <thead>
    <tr>
      <th>License plate</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @licenseplates.each do |licenseplate| %>
      <tr>
        <td><%= licenseplate.license_plate %></td>
        <td><%= licenseplate.make %></td>
        <td><%= licenseplate.year %></td>
        <td><%= licenseplate.color %></td>
        <td><%= licenseplate.user.name %></td>
        <td><%= link_to 'Show', licenseplate %></td>
        <td><%= link_to 'Edit', edit_licenseplate_path(licenseplate) %></td>
        <td><%= link_to 'Destroy', licenseplate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Licenseplate', new_licenseplate_path %>
